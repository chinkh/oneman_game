<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/heart_1"
            android:layout_width="55px"
            android:layout_height="55px"
            android:layout_marginHorizontal="10px"
            android:visibility="invisible"
            android:src="@drawable/heart" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/heart_2"
            android:layout_width="55px"
            android:layout_height="55px"
            android:layout_marginHorizontal="10px"
            android:visibility="invisible"
            android:src="@drawable/heart" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/heart_3"
            android:layout_width="55px"
            android:layout_height="55px"
            android:layout_marginHorizontal="10px"
            android:visibility="invisible"
            android:src="@drawable/heart" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/heart_4"
            android:layout_width="55px"
            android:layout_height="55px"
            android:layout_marginHorizontal="10px"
            android:visibility="invisible"
            android:src="@drawable/heart" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/heart_5"
            android:layout_width="55px"
            android:layout_height="55px"
            android:layout_marginHorizontal="10px"
            android:visibility="invisible"
            android:src="@drawable/heart" />

    </android.support.v7.widget.LinearLayoutCompat>

    <Button
        android:id="@+id/add_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="+1心"
        app:layout_constraintBottom_toTopOf="@+id/reduce_heart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat"
        app:layout_constraintVertical_bias="0.492" />

    <Button
        android:id="@+id/reduce_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="148dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="-1心"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>